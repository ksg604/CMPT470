<script src="../javascripts/menu.js"></script>

<div class="container-fluid bg-3 text-center">    
  <h3><%= page %></h3><br>
  <div class="row">
    <div class="col-sm-3">

         
        <form onsubmit = "handleSubmit()">
          <fieldset>
            <legend>Create a user:</legend>
            <p>
              <label>Name:</label>
              <input type = "textbox" id = "userName"/>
              <br>
              <label>Email:</label>
              <input type = "textbox" id = "userEmail"/>
              <br>
              <label>Age:</label>
              <input type = "number" id = "userAge"/>
              <br>
              <label>Phone Number:</label>
              <input type = "tel" id  = "userPhone"/>
              <br>


              <label>Address:</label>
              <input type = "text" id = "userAddress"/>
              <br>
            
             
              <label>Gender:</label>
              <input type = "radio" id = "userGenderMale" name = "gender" value = "Male"/>
              <label for = "userGenderMale">Male</label>
              <input type = "radio" id = "userGenderFemale" name = "gender" value = "Female"/>
              <label for = "userGenderFemale">Female</label>
              <br>

              <label>Birth Date:</label>
              <input type = "date" id = "userDob"/>

            </p>

            <input type = "submit" onclick = "createUser()"/>
            <input type = "button" value = "Clear all users from db" onclick = "clearDb()"/>


          </fieldset>
        </form>

            
    </div>
    
    <div class="col-sm-5"> 
      <div id = "tableButton">
        <input type = "button" value = "Show users" onclick = "populateTable()"/>
      </div>
      <table id = "table">
        <tr>
          <th>id</th>
          <th>Name</th>
          <th>Email</th>
          <th>Age</th>
          <th>Phone Number</th>
          <th>Address</th>
          <th>Gender</th>
          <th>Birth Date</th>  
        </tr>

      </table>
    </div>

    <div class="col-sm-4">
      <div id = "graphButton">
        <input type = "button" value = "Show bar graph" onclick = "populateGraph()"/>
      </div>
      <br>
      <p><strong>User Ages</strong></p>
      <div id = "userAgeGraph">

      </div>
      
    </div>

</div>
