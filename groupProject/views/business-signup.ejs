<div class="container my-6">
  <div class="row">
    <div class="col-md-10 col-lg-10 mx-auto">
      <h1 class="text-center">Business Sign-Up</h1>
      <form action="/business/signup" method="POST">
        <div class="form-group">
          <%- include('./partials/msg.ejs'); %>
          <label for="name">Name</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter your business name" value="<%= typeof name != 'undefined' ? name : '' %>"/>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter your business email address"  value="<%= typeof email != 'undefined' ? email : '' %>"/>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter password" value="<%= typeof password != 'undefined' ? password : '' %>"/>
        </div>
        <div class="form-group">
          <label for="rePassword">Retype Password</label>
          <input type="password" id="rePassword" name="rePassword" class="form-control" placeholder="Confirm Password" value="<%= typeof rePassword != 'undefined' ? rePassword : '' %>"/>
        </div>
        <div class="form-group">
          <p>Address</p>
          <label for="add1">Address Line 1</label>
          <input type="text" id="add1" name="add1" class="form-control"  value="<%= typeof add1 != 'undefined' ? add1 : '' %>"/>
          <label for="add2">Address Line 2</label>
          <input type="text" id="add2" name="add2" class="form-control" value="<%= typeof add2 != 'undefined' ? add2 : '' %>"/>

          <div class="row">
            <div class="col">
              <label for="city">City</label>
              <input type="text" id="city" name="city" class="form-control" value="<%= typeof city != 'undefined' ? city : '' %>"/>
            </div>
            <div class="col">
              <label for="state">State</label>
              <input type="text" id="state" name="state" class="form-control" value="<%= typeof state != 'undefined' ? state : '' %>"/>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <label for="zip">Postal Code</label>
              <input type="text" id="zip" name="zip" class="form-control" value="<%= typeof zip != 'undefined' ? zip : '' %>"/>
            </div>
            <div class="col">
              <label for="country">Country</label>
              <input type="text" id="country" name="country" class="form-control" value="<%= typeof country != 'undefined' ? country : '' %>"/>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="radius">Radius(km): User needs to be geolocated in this radius to be able to book appointments </label>
          <input type="number" id="radius" name="radius" class="form-control" min="1" max="50" value="<%= typeof radius != 'undefined' ? radius : '' %>"/>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col">
              <label for="openingHour">Opening Hours</label>
              <input type="time" id="openingHourtemp" name="openingHourtemp" class="form-control" value="<%= typeof openingHour != 'undefined' ? openingHour : '' %>"/>
            </div>
            <div class="col">
              <label for="closingHour">Closing Hours</label>
              <input type="time" id="closingHourtemp" name="closingHourtemp" class="form-control" value="<%= typeof closingHour != 'undefined' ? closingHour : '' %>"/>
            </div>
          </div>
        </div>
        <div class = form-group>
          <p>Days your business is open in a week: </p>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="monday" value="true" <%= ((typeof m != 'undefined') && (m == true)) ? 'checked' : '' %> />
            <label class="form-check-label" for="monday">Monday</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="tuesday" value="true" <%= ((typeof tu != 'undefined') && (tu == true)) ? 'checked' : '' %> />
            <label class="form-check-label" for="tuesday">Tuesday</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="wednesday" value="true" <%= ((typeof w != 'undefined') && (w == true)) ? 'checked' : '' %> />
            <label class="form-check-label" for="wednesday">Wednesday</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="thursday" value="true" <%= ((typeof th != 'undefined') && (th == true)) ? 'checked' : '' %> />
            <label class="form-check-label" for="thursday">Thursday</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="friday" value="true" <%= ((typeof fr != 'undefined') && (fr == true)) ? 'checked' : '' %> />
            <label class="form-check-label" for="friday">Friday</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="saturday" value="true" <%= ((typeof sa != 'undefined') && (sa == true)) ? 'checked' : '' %> />
            <label class="form-check-label" for="sa">Saturday</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="sunday" value="true" <%= ((typeof su != 'undefined') && (su == true)) ? 'checked' : '' %> />
            <label class="form-check-label" for="sunday">Sunday</label>
          </div>
        </div>
        <div class="form-group">
          <label for="queue">How many people can wait in the queue ?</label>
          <input type="number" id="queue" name="queue" class="form-control" min="1" max="50" value="<%= typeof queue != 'undefined' ? queue : '' %>"/>
        </div>
        <button type="submit" class="btn btn-primary btn-block btn-lg">
          Register
        </button>
      </form>
      <p class="text-center">If you already have an account ? <a href="/business/login">Login</a></p>
    </div>
  </div>
</div>
