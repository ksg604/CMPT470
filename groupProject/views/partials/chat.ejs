<link rel="stylesheet" href="/static/stylesheets/chat.css">
<div class ="container">
<div id="chat_window"  class="card">
	<div  class="card-header">Chat</div>
	<div class="card-body">
		<div class="container" id ="messages"></div>
	</div>
	<div  class="card-footer">
        	<div  class="input-group">
        		<input  id="message"  class="form-control"  placeholder="Type your message here..."  />
        		<% if(page === 'user-chat'){ %>
        			<span class="input-group-btn">
        			<button  class="btn btn-success" id="send_message" onclick="sendMessage('<%= user.name %>')">Send</button>
        			</span>
        		<% } else { %>
        			<span class="input-group-btn">
        				<button class="btn btn-success" id="send_message" onclick="sendMessage('<%= business.name %>')">Send</button>
        				<button class="btn btn-danger" id="clearBtn" onclick="clearChat()">Clear</button>
        			</span>
        		<% } %>
        	</div>
	</div>
</div>
</div>



