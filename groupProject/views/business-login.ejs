<div class="container my-6">
  <div class="row">
    <div class="col-md-7 col-lg-7 mx-auto">
      <h1 class="text-center">Business Log-in</h1>
        <form action="/business/login" method="POST">
          <div class="form-group">
            <%- include('./partials/msg.ejs'); %>
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email address" />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter password" />
          </div>
          <button type="submit" class="btn btn-primary btn-block btn-lg">
            Login
          </button>
        </form>
        <p class="text-center">If you do not have an account ? <a href="/business/signup">Sign Up</a></p>
    </div>
  </div>
</div>
